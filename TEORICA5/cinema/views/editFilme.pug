extends layout

block content
  .w3-card-4 
    header.w3-container.w3-blue 
      h1= tit

    w3.container
      h2 Editar Filme

      form(action=`/filmes/edit/${filme._id}` method="POST")
        ul.w3-ul
          li 
            h3 Ano  
            input.w3-input(type="text" name="year" value=filme.year required)

          li 
            h3 Título  
            input.w3-input(type="text" name="title" value=filme.title required)

          li 
            h3 Elenco  
            ul.w3-ul
              each ator in filme.cast
                li 
                  input.w3-input(type="text" name="cast" value=ator)

          li 
            h3 Gêneros  
            ul.w3-ul
              each g in filme.genres
                li 
                  input.w3-input(type="text" name="genres" value=g)

        button.w3-button.w3-green(type="submit") Submit

    footer.w3-container.w3-blue 
      adress Generated by EW2025 class
