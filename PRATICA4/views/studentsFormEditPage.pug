extends layout

block content
    .w3-card-4
        header.w3-container.w3-orange
            h2 Student Form

        form.w3-container(method="POST")
            fieldset 
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=aluno.id)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value=aluno.nome)
                label Git
                input.w3-input.w3-round(type="text" name="git" value=aluno.git)
            fieldset
                legend TPC 
                each num in Arrays.from({length : 9})
                    if 'tpc' + num in aluno.tpc
                        input.w3-check(type="checkbox" name="tpc" + num value="1" checked)
                    else 
                        input.w3-check(type="checkbox" name="tpc" + num value="1")
                br
                button.w3-btn.w3-orange.w3-mb-2(type="submit") Edit


